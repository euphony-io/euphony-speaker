<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Euphony Speaker Examples"
        android:textSize="15dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/tone_generator_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tone Generator"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title_view"/>

    <Button
        android:id="@+id/eupi_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EuPI Test"
        app:layout_constraintTop_toBottomOf="@id/tone_generator_btn"/>

    <Button
        android:id="@+id/msg_generator_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Generator"
        app:layout_constraintTop_toBottomOf="@id/eupi_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>